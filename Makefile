###############################################################################
# PROPERTIES
###############################################################################
REPO = powerpro
NAME = google-cloud-sdk-gae-java8
VERSION ?= latest

.PHONY: default
default: build;

###############################################################################
# CONTAINER
###############################################################################

build:
	@docker build --rm -t $(REPO)/$(NAME):$(VERSION) .

push:
	@docker push $(REPO)/$(NAME):$(VERSION)

###############################################################################
# UTILITY
###############################################################################
tags:
	@gcloud container images list-tags $(REPO)/$(NAME)
